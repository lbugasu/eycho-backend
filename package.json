{
    "name": "fourthwave-backend",
    "version": "2.0.0",
    "description": "Backend for 4thWave.",
    "main": "dist/server/server.js",
    "scripts": {
        "start": "node dist/server/server.js",
        "dev": "concurrently \"tsc -w\" \"nodemon dist/server/server.js\"",
        "build": "tsc",
        "postinstall": "yarn build",
        "build:pods": "yarn build && chmod +x ./scripts/build_db && ./scripts/build_db",
        "commit": "cz",
        "release": "standard-version"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@babel/runtime": "^7.16.7",
        "@sentry/node": "^6.19.6",
        "@sentry/tracing": "^6.19.6",
        "@typegoose/typegoose": "^9.5.0",
        "altair-fastify-plugin": "^4.3.1",
        "apollo-server-fastify": "^3.6.2",
        "chalk": "^4.1.2",
        "crypto": "^1.0.1",
        "dotenv": "^14.2.0",
        "express": "^4.17.2",
        "express-session": "^1.17.2",
        "fastify": "^3.27.0",
        "fastify-cors": "^6.0.2",
        "fastify-gql": "^5.8.2",
        "fastify-swagger": "^4.13.1",
        "fastify-xml-body-parser": "^2.1.0",
        "firebase-admin": "^10.0.2",
        "graphql": "^15.3.0",
        "mongodb": "^4.3.1",
        "mongoose": "^6.3.0",
        "mongoose-findorcreate": "^3.0.0",
        "node-html-parser": "^5.3.3",
        "ramda": "^0.28.0",
        "reflect-metadata": "^0.1.13",
        "request": "^2.88.2",
        "rss-parser": "^3.12.0",
        "slugify": "^1.6.5",
        "striptags": "^3.2.0",
        "type-graphql": "^1.1.1",
        "typescript": "^4.5.5",
        "unsplash-js": "^7.0.15",
        "uuid4": "^2.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.16.12",
        "@babel/node": "^7.16.8",
        "@babel/preset-env": "^7.16.11",
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@types/ramda": "^0.28.11",
        "@types/uuid4": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "commitizen": "^4.2.4",
        "concurrently": "^7.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.13.0",
        "husky": "^7.0.4",
        "mocha": "^9.1.4",
        "nodemon": "^2.0.15",
        "prettier": "^2.6.2",
        "pretty-quick": "^3.1.3",
        "standard-version": "^9.3.2"
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
